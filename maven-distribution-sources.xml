<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  <id>sources</id>
  <formats>
    <format>jar</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <fileSets>
    <fileSet>
      <directory>adapters</directory>
      <outputDirectory>ckeditor/adapters</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>core</directory>
      <outputDirectory>ckeditor/core</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>lang</directory>
      <outputDirectory>ckeditor/lang</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>plugins</directory>
      <outputDirectory>ckeditor/plugins</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>samples</directory>
      <outputDirectory>ckeditor/samples</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>skins</directory>
      <outputDirectory>ckeditor/skins</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>.</directory>
      <outputDirectory>ckeditor</outputDirectory>
      <includes>
        <include>CHANGES.md</include>
        <include>ckeditor.js</include>
        <include>config.js</include>
        <include>contents.css</include>
        <include>LICENSE.md</include>
        <include>README.md</include>
        <include>styles.js</include>
      </includes>
    </fileSet>
  </fileSets>
  <files>
    <file>
      <source>LICENSE.md</source>
      <outputDirectory>META-INF</outputDirectory>
      <destName>LICENSE</destName>
    </file>
  </files>
</assembly>
